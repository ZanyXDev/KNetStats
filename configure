#!/bin/bash
#	I don't know shell script, so I hate it ;-)
#	This is the best that I can do.

if [ ! -n $KDEDIR ]
then
	echo  "KDEDIR environment variable is not available! You need set then with the path of your KDE directory to compile KNetStats!"
else
	rm -rdf Makefile
	qmake -unix -nocache knetstats.pro
	echo -e "Type:\n    make; make install;"
fi
